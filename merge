#include <stdio.h>

// Função para imprimir o vetor
void imprimirVetor(int vetor[], int tamanho) {
    for (int i = 0; i < tamanho; i++) {
        printf("%d|", vetor[i]);
    }
    printf("\n");
}

// Função que junta as duas partes (intercalação)
void intercalar(int vetor[], int inicio, int meio, int fim) {
    int i, j, k;
    int n1 = meio - inicio + 1; // Tamanho da metade esquerda
    int n2 = fim - meio;        // Tamanho da metade direita

    // Vetores temporários
    int esquerda[n1], direita[n2];

    // Copia os dados para os vetores temporários
    for (i = 0; i < n1; i++)
        esquerda[i] = vetor[inicio + i];
    for (j = 0; j < n2; j++)
        direita[j] = vetor[meio + 1 + j];

    // Índices iniciais dos sub-vetores e do vetor principal
    i = 0; 
    j = 0; 
    k = inicio; 

    // Compara e ordena de volta no vetor principal
    while (i < n1 && j < n2) {
        if (esquerda[i] <= direita[j]) {
            vetor[k] = esquerda[i];
            i++;
        } else {
            vetor[k] = direita[j];
            j++;
        }
        k++;
    }

    // Se sobrarem elementos na esquerda, eles são copiados
    while (i < n1) {
        vetor[k] = esquerda[i];
        i++;
        k++;
    }

    // Se sobrarem elementos na direita, eles são copiados
    while (j < n2) {
        vetor[k] = direita[j];
        j++;
        k++;
    }
}

// Função principal do Merge Sort
void mergeSort(int vetor[], int inicio, int fim) {
    if (inicio < fim) {
    
        // Encontra o ponto médio para evitar overflow em vetores grandes
        int meio = inicio + (fim - inicio) / 2;

        mergeSort(vetor, inicio, meio);
        mergeSort(vetor, meio + 1, fim);

        // Une as partes ordenadas
        intercalar(vetor, inicio, meio, fim);
    }
}

int main() {
    
    int meuVetor[] = {50, 70, 30, 40, 20, 80, 5, 60, 90, 10};
    int tam = sizeof(meuVetor)/sizeof(meuVetor[0]);

    imprimirVetor(meuVetor, tam);
    mergeSort(meuVetor, 0, tam - 1);
    imprimirVetor(meuVetor, tam);

    return 0;
}
